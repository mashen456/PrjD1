    </div>


    <!-- Rechte Seite -->

    <div class=" col-md-6 bglightblue h-md-100 pt pb">
        <div class=" d-md-flex align-items-center h-md-100 p-5 justify-content-center text-center">
            <footer>
                <div>

                    <p>&copy; @DateTime.Now.Year - Meine ASP.NET-Anwendung</p>
                </div>
            </footer>
            <div class="loginbox "</div>
            <img src="~/Content/Kalender2.png" class="img-fluid imgkalender" alt="Responsive image">
            <h1 class="frobotob">Register</h1>
            <p class="frobotos">Register your account.</p>

            @using (Html.BeginForm("Register", "Register", FormMethod.Post))
            {
                @Html.AntiForgeryToken()



                <div class="row">




                    <div class="middle" style="margin-top:10px">


                        @Html.EditorFor(user => user.Username, new { htmlAttributes = new { @class = "form-control frobotos text-center ", placeholder = "Username" } })

                        @Html.ValidationMessageFor(user => user.Username, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="row">
                    <div class="middle" style="margin-top:10px">
                        @Html.PasswordFor(user => user.Password, htmlAttributes: new { @class = "form-control frobotos text-center", placeholder = "Password" })

                        @Html.ValidationMessageFor(user => user.Password, "", new { @class = "text-danger" })

                    </div>
                </div>

                <div class="row">
                    <div class="middle" style="margin-top:10px">
                        @Html.EditorFor(user => user.ConfirmPassword, new { htmlAttributes = new { @class = "form-control frobotos text-center", placeholder = "Confirm Password" } })

                        @Html.ValidationMessageFor(user => user.ConfirmPassword, "", new { @class = "text-danger" })

                        @if (ViewData["Error"] != null)
                        {
                            <div class="text-danger">
                                <p>@ViewData["Error"].ToString()</p>
                            </div>
                        }
                    </div>
                </div>

                <div class="row">
                    <div style="margin-top:10px">
                        <input type="submit" value="Register" class="btn btn-default" />
                    </div>
                </div>



                <div class="row">
                    <div style="margin-top:5px; text-align: left; margin-left: 25%;">
                        @Html.ActionLink("Login", "Index", "Login")
                    </div>

                </div>}


        </div>






    </div>
</div>


